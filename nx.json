{
    "tasksRunnerOptions": {
        "default": {
            "runner": "nx/tasks-runners/default",
            "options": {
                "cacheableOperations": ["lint", "format", "build"]
            }
        }
    },
    "targetDefaults": {
        "format": {
            "dependsOn": ["^format"],
            "outputs": ["{projectRoot}/lib"]
        },
        "build": {
            "dependsOn": ["^build"],
            "outputs": ["{projectRoot}/dist"]
        }
    }
}
